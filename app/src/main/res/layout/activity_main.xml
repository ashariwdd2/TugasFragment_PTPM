<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgr">
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/black"
            android:id="@+id/header"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logojogja"
            android:id="@+id/logo_dasbor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/header"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:text="selamat datang di aplikasi daftar dinas kota yogyakarta"
            android:textSize="20dp"
            android:id="@+id/selamat_datang"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo_dasbor"
            android:backgroundTint="@color/black"
            android:layout_marginTop="75dp"
            android:textColor="@color/white"/>
    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/navigasi_menu"
        android:layout_alignParentBottom="true"
        app:menu="@menu/button_menu"
        app:itemIconTint="@color/white"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_fragmen"
        android:layout_above="@+id/navigasi_menu"
        />

</RelativeLayout>
